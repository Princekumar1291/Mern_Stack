  <%- include('../partials/head.ejs') %>
  <%- include('../partials/nav.ejs') %>
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <% if (typeof home !== 'undefined') { %>
      <!-- Hero Section -->
      <div class="relative h-[40vh] sm:h-[50vh] md:h-[60vh] mb-4 sm:mb-6 md:mb-8 rounded-xl sm:rounded-2xl md:rounded-3xl overflow-hidden">
        <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-full object-cover">
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-6 md:p-8 text-white">
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-2 sm:mb-3 md:mb-4"><%= home.houseName %></h1>
          <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-2 sm:space-y-0 sm:space-x-6">
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <span class="ml-2 text-sm sm:text-base font-semibold"><%= home.rating %> Rating</span>
            </div>
            <div class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              </svg>
              <span class="ml-2 text-sm sm:text-base"><%= home.location %></span>
            </div>
            <div class="absolute right-5">
              <a class="text-sm sm:text-base underline text-red-200" href="path/to/your/file.txt" download="filename.txt">Terms & Conditions</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Content Section -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-4 sm:space-y-6 md:space-y-8">
          <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-6 md:p-8 shadow-lg">
            <h2 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6">About this property</h2>
            <p class="text-gray-700 text-sm sm:text-base leading-relaxed"><%= home.description %></p>
          </div>

          <div class="bg-white rounded-xl sm:rounded-2xl p-4 sm:p-6 md:p-8 shadow-lg">
            <h2 class="text-xl sm:text-2xl font-bold mb-4 sm:mb-6">Amenities</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 sm:gap-6">
              <div class="flex items-center space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                <span class="text-sm sm:text-base">Free WiFi</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
                <span class="text-sm sm:text-base">AC</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
                </svg>
                <span class="text-sm sm:text-base">Parking</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Booking Card -->
        <div class="lg:col-span-1">
          <div class="sticky top-8">
            <div class="bg-white rounded-xl sm:rounded-2xl shadow-lg p-4 sm:p-6">
              <div class="flex items-center justify-between mb-4 sm:mb-6">
                <div>
                  <span class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900">â‚¹<%= home.price %></span>
                  <span class="text-sm sm:text-base text-gray-500">/night</span>
                </div>
                <%- include('../partials/add-to-favourite.ejs') %>
              </div>

              <div class="space-y-3 sm:space-y-4 mb-4 sm:mb-6">
                <div class="grid grid-cols-2 gap-3 sm:gap-4">
                  <div class="bg-gray-50 p-3 sm:p-4 rounded-lg sm:rounded-xl">
                    <label class="block text-xs sm:text-sm text-gray-600 mb-1">Check-in</label>
                    <input type="date" class="w-full bg-transparent text-sm sm:text-base">
                  </div>
                  <div class="bg-gray-50 p-3 sm:p-4 rounded-lg sm:rounded-xl">
                    <label class="block text-xs sm:text-sm text-gray-600 mb-1">Check-out</label>
                    <input type="date" class="w-full bg-transparent text-sm sm:text-base">
                  </div>
                </div>
                <div class="bg-gray-50 p-3 sm:p-4 rounded-lg sm:rounded-xl">
                  <label class="block text-xs sm:text-sm text-gray-600 mb-1">Guests</label>
                  <select class="w-full bg-transparent text-sm sm:text-base">
                    <option>1 guest</option>
                    <option>2 guests</option>
                    <option>3 guests</option>
                    <option>4 guests</option>
                  </select>
                </div>
              </div>

              <button class="w-full py-3 sm:py-4 bg-blue-600 text-white rounded-lg sm:rounded-xl text-sm sm:text-base font-semibold hover:bg-blue-700 transition-colors">
                Book Now
              </button>

              <p class="text-center text-xs sm:text-sm text-gray-500 mt-3 sm:mt-4">You won't be charged yet</p>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</body>
</html>