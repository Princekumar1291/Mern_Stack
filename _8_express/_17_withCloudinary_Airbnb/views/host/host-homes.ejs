  <%- include('../partials/head.ejs') %>
  <%- include('../partials/nav.ejs') %>
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% homes.forEach((home) => { %>
      <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden">
        <div class="relative">
          <img class="w-full h-72 object-cover" src="<%= home.photoUrl %>" alt="<%= home.houseName %>">
          <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 to-transparent p-6">
            <h3 class="font-bold text-2xl mb-2 text-white"><%= home.houseName %></h3>
            <div class="flex items-center space-x-4">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="ml-1 text-white font-semibold"><%= home.rating %></span>
              </div>
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                </svg>
                <span class="ml-1 text-white"><%= home.location %></span>
              </div>
            </div>
          </div>
        </div>
        <div class="p-6">
          <p class="text-gray-700 mb-6 line-clamp-3"><%= home.description %></p>

          <div class="flex flex-col space-y-4">
            <div class="flex items-center">
              <span class="text-sm text-gray-500">Price per night</span>
              <div class="flex items-baseline ml-2">
                <span class="text-2xl font-bold text-blue-600">â‚¹<%= home.price %></span>
              </div>
            </div>
            <div class="flex flex-col sm:flex-row items-stretch gap-3">
              <a href="/homes/<%= home._id %>" class="px-3 py-1.5 sm:px-4 sm:py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors text-sm sm:text-base text-center">
                View Details
              </a>
              <a href="/host/edit-home/<%= home._id %>?editing=true" class="flex-1 w-full px-3 py-1.5 sm:px-4 sm:py-2 bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition-colors text-sm sm:text-base text-center">
                Edit
              </a>
              <form action="/host/delete-home/<%= home._id %>" method="POST">
                <button type="submit" class="flex-1 w-full px-3 py-1.5 sm:px-4 sm:py-2 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors text-sm sm:text-base text-center">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</body>

</html>

