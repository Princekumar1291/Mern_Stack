<%- include('../partials/head.ejs') %>
</head>
<body class="min-h-screen bg-gray-100">
    <%- include('../partials/nav.ejs') %>
    <form action="/resetPassword" method="POST" class="bg-white p-8 my-4 mx-auto rounded-lg shadow-md w-full max-w-sm">
        <p class=" font-bold text-center mb-6">Reset Password for <%=email%></p>
        <h2 class="text-2xl font-bold mb-6 text-center">Reset Password</h2>
        <% if (typeof errorsMessages !== 'undefined' && errorsMessages.length > 0) { %>
            <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                <% errorsMessages.forEach(error => { %>
                    <p><%= error %></p>
                <% }) %>
            </div>
        <% } %>
        <div class="mb-4">
            <input type="hidden" id="email" name="email" value="<%=email%>">
            <label for="otp" class="block text-sm font-medium text-gray-700">Otp:</label>
            <input type="text" id="otp" name="otp" value="<%=typeof oldInputs !== 'undefined'?oldInputs.otp:''%>" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div class="mb-4">
            <label for="password" class="block text-sm font-medium text-gray-700">New Password:</label>
            <input type="password" id="password" name="password" value="<%=typeof oldInputs !== 'undefined'?oldInputs.password:''%>" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div class="mb-4">
            <label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" value="<%=typeof oldInputs !== 'undefined'?oldInputs.confirmPassword:''%>" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
        </div>
        <div>
            <input type="submit" value="Reset Password" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        </div>
    </form>
</body>
</html>

